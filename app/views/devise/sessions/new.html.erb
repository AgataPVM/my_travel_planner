<div class="container ">
  <div class="row justify-content-center align-items-center m-4 border border-4 border-registration rounded-5" style="height: 80vh;">

    <div class="col-4">
      <h2 class="h2-registration">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs mt-4">
            <%= f.input :email,
                        label: false,
                        placeholder: "Email",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: false,
                        placeholder: "Senha",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Lembre-me" , label_html: { class: "remember-me" }, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions d-flex justify-content-center">
            <%= f.button :submit, "Log in", class: "solid-button w-50 rounded-5"%>
          </div>
        <% end %>

          <div class="d-flex flex-column justify-content-center align-items-center space-between mt-4">
            <%= render "devise/shared/links" %>
          </div>
    </div>
  </div>
</div>
